<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightGrey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/danger_box"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="20dp"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="외출 동선 입력"
                android:textSize="17dp"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/search_route_Button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:text="동선 검색"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_full_design"/>
        </LinearLayout>

        <Button
            android:id="@+id/starting_point_Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="출발지"
            android:textSize="17dp"
            android:textColor="@color/colorDarkGrey"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/edittext_outline_design"
            android:layout_marginBottom="10dp"
            style="?android:attr/borderlessButtonStyle"/>
        <Button
            android:id="@+id/finish_point_Button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="도착지"
            android:textSize="17dp"
            android:textColor="@color/colorDarkGrey"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/edittext_outline_design"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>
    <com.google.android.gms.maps.MapView
        android:id="@+id/danger_MapView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>