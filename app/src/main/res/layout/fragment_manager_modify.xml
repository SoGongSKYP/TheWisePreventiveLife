<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGrey">

    <LinearLayout
        android:id="@+id/modify_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/modify_title_mLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:weightSum="10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="수정할 확진자"
                android:textSize="17dp"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold" />
            <Button
                android:id="@+id/patient_search_Button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:text="검   색"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_full_design"/>
        </LinearLayout>

        <EditText
            android:id="@+id/search_loc_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:hint="확진자 지역"
            android:background="@drawable/edittext_outline_design"/>

        <EditText
            android:id="@+id/search_num_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:hint="확진자 번호"
            android:background="@drawable/edittext_outline_design"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_visit_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@color/colorWhite"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/search_visit_title_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="확진자 동선 정보"
                android:textSize="18dp"
                android:textColor="@color/colorDarkGrey"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/search_visit_add_Button"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_round_add_circle_outline_24"
                android:background="@color/colorWhite"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_visit_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
</LinearLayout>